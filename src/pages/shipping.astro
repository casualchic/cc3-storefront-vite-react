---
import BaseLayout from '@/layouts/BaseLayout.astro';
---

<BaseLayout
  title="Shipping Information | Casual Chic Boutique"
  description="Learn about our shipping options, delivery times, and policies"
>
  <div class="max-w-4xl mx-auto px-4 py-12">
    <!-- Breadcrumb -->
    <nav class="mb-8 text-sm">
      <ol class="flex items-center space-x-2 text-charcoal">
        <li><a href="/" class="hover:text-primary">Home</a></li>
        <li class="before:content-['/'] before:mx-2 text-forest font-medium">
          Shipping
        </li>
      </ol>
    </nav>

    <h1 class="font-heading text-4xl md:text-5xl font-bold text-forest mb-8">
      Shipping Information
    </h1>

    <!-- Shipping Options -->
    <div class="space-y-8">
      <section>
        <h2 class="font-heading text-2xl font-bold text-forest mb-4">Shipping Options</h2>
        <div class="space-y-4">
          <div class="bg-neutral/20 p-6 rounded-lg">
            <div class="flex items-start gap-4">
              <svg class="w-8 h-8 text-sage flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <div>
                <h3 class="font-bold text-forest mb-2">Free Standard Shipping</h3>
                <p class="text-charcoal mb-2">On orders over $75</p>
                <p class="text-sm text-charcoal/70">Delivery: 3-5 business days</p>
              </div>
            </div>
          </div>

          <div class="bg-neutral/20 p-6 rounded-lg">
            <div class="flex items-start gap-4">
              <svg class="w-8 h-8 text-primary flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
              <div>
                <h3 class="font-bold text-forest mb-2">Standard Shipping</h3>
                <p class="text-charcoal mb-2">$4.99 flat rate</p>
                <p class="text-sm text-charcoal/70">Delivery: 3-5 business days</p>
              </div>
            </div>
          </div>

          <div class="bg-neutral/20 p-6 rounded-lg">
            <div class="flex items-start gap-4">
              <svg class="w-8 h-8 text-primary flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
              <div>
                <h3 class="font-bold text-forest mb-2">Express Shipping</h3>
                <p class="text-charcoal mb-2">$9.99 flat rate</p>
                <p class="text-sm text-charcoal/70">Delivery: 1-2 business days</p>
              </div>
            </div>
          </div>

          <div class="bg-neutral/20 p-6 rounded-lg">
            <div class="flex items-start gap-4">
              <svg class="w-8 h-8 text-primary flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <div>
                <h3 class="font-bold text-forest mb-2">International Shipping</h3>
                <p class="text-charcoal mb-2">Calculated at checkout</p>
                <p class="text-sm text-charcoal/70">Delivery: 7-14 business days</p>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Processing Time -->
      <section>
        <h2 class="font-heading text-2xl font-bold text-forest mb-4">Order Processing</h2>
        <div class="prose prose-lg max-w-none">
          <p class="text-charcoal">
            Orders placed before 2pm EST Monday-Friday ship the same day.
            Orders placed after 2pm EST or on weekends ship the next business day.
          </p>
          <p class="text-charcoal">
            You'll receive a tracking number via email as soon as your order ships.
          </p>
        </div>
      </section>

      <!-- Shipping Restrictions -->
      <section>
        <h2 class="font-heading text-2xl font-bold text-forest mb-4">Shipping Restrictions</h2>
        <div class="prose prose-lg max-w-none">
          <ul class="space-y-2 text-charcoal">
            <li>We currently ship to the United States, Canada, and select international destinations</li>
            <li>PO Boxes and military addresses (APO/FPO) accepted for standard shipping only</li>
            <li>Certain items may have shipping restrictions based on destination</li>
          </ul>
        </div>
      </section>

      <!-- Questions -->
      <section class="bg-neutral/10 p-6 rounded-lg">
        <h2 class="font-heading text-xl font-bold text-forest mb-3">Have Questions?</h2>
        <p class="text-charcoal mb-4">
          Contact our customer service team for help with your order.
        </p>
        <a
          href="/contact"
          class="inline-block bg-primary hover:bg-sage text-white px-6 py-3 rounded-lg font-semibold transition-colors"
        >
          Contact Us
        </a>
      </section>
    </div>
  </div>
</BaseLayout>
